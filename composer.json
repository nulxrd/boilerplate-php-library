{
    "name": "nulxrd/boilerplate-php-library",
    "description": "Boilerplate PHP library.",
    "license": "MIT",
    "type": "library",
    "support": {
        "issues": "https://github.com/nulxrd/boilerplate-php-library/issues",
        "source": "https://github.com/nulxrd/boilerplate-php-library"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "ionbytes/coding-standard": "^1.0",
        "phpstan/phpstan": "^2.0.x-dev",
        "phpunit/phpunit": "^11.2-dev"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Vendor\\Project\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vendor\\Project\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.15"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ],
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "phpunit": "phpunit --colors=always"
    }
}
